package test;

import java.io.IOException;
import java.io.InputStream;
import java.util.HashMap;
import java.util.List;

import org.apache.ibatis.io.Resources;
import org.apache.ibatis.session.SqlSession;
import org.apache.ibatis.session.SqlSessionFactory;
import org.apache.ibatis.session.SqlSessionFactoryBuilder;
import org.junit.Before;
import org.junit.Test;

import pojo.User;

public class MybatisTest {
	
	private SqlSessionFactory factory;

	@Before
	public void init() throws IOException{
		InputStream inputStream = Resources.getResourceAsStream("sqlMapConfig.xml");
		factory= new SqlSessionFactoryBuilder().build(inputStream);
	}
	//查询用户
	@Test
	public void test01(){
		SqlSession session = factory.openSession();
		List<User> userList = session.selectList("pojo.UserMapper.findUser");
		for (User user : userList) {
			System.out.println(user);
		}
	}
	//插入用户
	@Test
	public void test02(){
		SqlSession session = factory.openSession();
		User user = new User();
		user.setName("鬼谷子");
		user.setAge(15);
		user.setSex("男");
		
		session.insert("pojo.UserMapper.addUser", user);
		
		session.commit();
	}
	//用户排序
	@Test
	public void test03(){
		SqlSession session = factory.openSession();
		HashMap<String,String> map = new HashMap<String,String>();
		map.put("age", "age");
		List<User> userList = session.selectList("pojo.UserMapper.findUserOrderByAge", map);
		for (User user : userList) {
			System.out.println(user);
		}
	}
	//用户查询
		@Test
		public void test04(){
			SqlSession session = factory.openSession();
			HashMap<String,Integer> map = new HashMap<String,Integer>();
			map.put("maxAge", 33);
			map.put("minAge", 18);
			List<User> userList = session.selectList("pojo.UserMapper.findUserByAge", map);
			for (User user : userList) {
				System.out.println(user);
			}
		}
	//修改用户
	@Test
	public void test05(){
		SqlSession session = factory.openSession();
		User user = new User();
		user.setId(33);
		user.setName("鬼谷子");
		user.setAge(18);
		user.setSex("男");
		
		session.update("pojo.UserMapper.dymanicUpdate",user);
		
		session.commit();
	}
	//动态查询用户
	@Test
	public void test06(){
		SqlSession session = factory.openSession();
		User user = new User();
//		user.setId(12);
//		user.setName("鬼谷子");
//		user.setAge(18);
		user.setSex("男");
		
		List<User> userList = session.selectList("pojo.UserMapper.dymanicFind",user);
		for (User user2 : userList) {
			System.out.println(user2);
		}
	}
	//动态插入
	@Test
	public void test07(){
		SqlSession session = factory.openSession();
		User user = new User();
		user.setName("鬼谷子");
		user.setAge(15);
		user.setSex("男");
		
		session.insert("pojo.UserMapper.addUser", user);
		
		session.commit();
	}
	
	//删除用户
	
	
	
}
